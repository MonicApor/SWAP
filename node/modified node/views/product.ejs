	<!-- product section -->
	<section class="product-section">
		<div class="container">
			<div class="back-link">
				<a href="/items"> &lt;&lt; Back to Category</a>
			</div>
			<div class="row">
				<div class="col-lg-6">
					<div class="col-lg-12">
						<div class="product-pic-zoom">
							<img class="product-big-img" src="<%= item.image %>" alt="">
							<% if(currentUser && item.author.id.equals(currentUser._id)){ %>
							</br><a class="btn btn-xs btn-warning" href="/items/<%= item._id %>/edit">Edit</a>
								<form id="delete-form" action="/items/<%= item._id %>?_method=DELETE" method="POST">
									<button class="btn btn-xs btn-danger">Delete</button>
								</form>
							<% }%>			
						</div>
					</div>
				</div>

				<div class="col-lg-6 product-details">
					
					<!-- Key Info -->
					<h2 class="p-title">Name of the Item: <%= item.name %> </h2>
					<h4 class="p-stock">Available</h4>
					<div class="p-review">
						<a href="">3 reviews</a>
					</div>
					<% if(currentUser && item.author.id.equals(currentUser._id)){ %>
					
					<% } else { %>	<button class="btn btn-success btn-lg trigger" >Want to Swap?</button> <% } %>
					
					<!-- More info... -->
					<div id="accordion" class="accordion-area">
						<div class="panel">
							<div class="panel-header" id="headingOne">
									<p>
										<em>Posted By <%= item.author.username %></em>
									</p>
								<button class="panel-link active" data-toggle="collapse" data-target="#collapse1" aria-expanded="true" aria-controls="collapse1">information about the trader</button>
							</div>
							<div id="collapse1" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
								<div class="panel-body">
								</div>
							</div>
						</div>
						<div class="panel">
							<div class="panel-header" id="headingTwo">
								<button class="panel-link" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">Item details </button>
							</div>
							<div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
								<div class="panel-body">
									<img src="./img/cards.png" alt="">
									<p><%= item.description %></p>
								</div>
							</div>
						</div>
					</div>
					<div class="social-sharing">
						<a href=""><i class="fa fa-google-plus"></i></a>
						<a href=""><i class="fa fa-pinterest"></i></a>
						<a href=""><i class="fa fa-facebook"></i></a>
						<a href=""><i class="fa fa-twitter"></i></a>
					</div>
				</div>
