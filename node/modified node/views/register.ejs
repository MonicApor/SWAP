<% include partials/header.login.ejs%>
<div class="container">
    <div class="container">
        <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-5 col-md-offset-4 col-sm-7 col-sm-offset-3">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <div class="panel-title text-center font-weight-bold">Sign Up <i class="fa fa-user-plus"></i></div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink"
                            href="/aboutus">Sign In</a></div>
                </div>
                <div class="panel-body">
                    <form id="signupform" class="form-horizontal" action="/createAccount" method="POST" enctype="multipart/form-data">
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-4 control-label">Username</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" required name="username"
                                    placeholder="Username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-md-4 control-label">Email</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" required name="email"
                                    placeholder="Email Address">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="firstname" class="col-md-4 control-label">First Name</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" required name="firstname"
                                    placeholder="First Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="col-md-4 control-label">Last Name</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" required name="lastname"
                                    placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">Password</label>
                            <div class="col-md-8">
                                <input type="password" class="form-control input-sm" required name="password"
                                    placeholder="Password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="icode" class="col-md-4 control-label">Address</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" required name="address"
                                    placeholder="Enter address">
                            </div>
                        </div>
                        <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" required name="img" id="inputGroupFile01"
                                        aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Upload Profile Picture</label>
                                </div>
                        </div>
                        <div class="form-group">
                                <label for="description" class="col-md-4 control-label">Describe Yourself as a Trader</label>
                                <div class="col-md-8">
                                        <textarea class="form-control" required name="description" placeholder="Type here..."rows="3"></textarea>
                                </div>
                            </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <button id="btn-signup" type="submit" class="btn btn-success btn-sm"> Sign Up <i
                                        class="fa fa-user-plus"></i></button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    Do you have an account!
                                    <a href="#">Login Here</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer.login.ejs%>